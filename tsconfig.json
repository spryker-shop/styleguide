{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "noImplicitAny": false,
        "removeComments": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7"
        ]
    },
    "files": [
        "./src/server/index.ts",
        "./src/generator/index.ts"
    ],
    "include": [
        "./src"
    ],
    "exclude": [
        "./src/themes",
        "node_modules",
        "**/*.spec.ts"
    ]
}
